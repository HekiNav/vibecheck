{
    "manifest_version": 3,
    "name": "VibeCheck",
    "version": "1.0",
    "description": "fancy description here",
    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://*.google.com/*",
                "*://*.x.com/*",
                "*://x.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "web-accessible-resources": [
        {
            "resources": [
                "data/content.jsonc"
            ],
            "extension_ids": [
                "*"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ]
}